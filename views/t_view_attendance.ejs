<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Teachers Dashboard</title>
  <link rel="stylesheet" href="output.css">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,400,0,0" />
  <link rel="shortcut icon" href="/images/AttendPro-logo.png" type="image/x-icon">
  <script type="text/javascript" src="/js/t_script.js" defer></script>
  <script type="text/javascript" src="/js/t_view_attendance.js" defer></script>

</head>

<body class="h-screen overflow-hidden">
  <!-- Navbar -->
  <div class="nav-con text-[#515151] w-full bg-[#F7F7F7] fixed top-0 left-0 z-10 h-16">
    <nav class="navbar w-11/12 flex justify-between items-center m-auto">
      <div class="at-logo text-[#515151] font-bold text-2xl flex items-center">
        Attend<span class="text-[#DB2878]">Pro</span>
      </div>
      <div class="nav-links flex items-center">
        <div class="w-44 h-12 border-2 border-gray-300 rounded-lg m-2 flex justify-center items-center ">Role : Teacher
        </div>
        <span class="menu material-symbols-outlined cursor-pointer sm:!hidden" style="font-size: 40px; ">menu</span>
      </div>
    </nav>
  </div>

  <!-- Sidebar -->
  <div
    class="sidebar h-full w-60 bg-[#F7F7F7] shadow-black p-4 text-[#515151] fixed top-16 left-0 overflow-y-auto hidden sm:block">
    <div class="flex flex-col">
      <!-- <div class="items-end"> -->
      <span class="material-symbols-outlined cursor-pointer self-end transition-transform duration-300"
        id="mini_sb">keyboard_arrow_left</span>
      <!-- </div>/ -->

      <div onclick="openPage('t_dashboard')"
        class="w-full h-12 my-2 flex rounded items-center gap-3 hover:bg-[#DB2878]/20 group cursor-pointer overflow-hidden">
        <div class="h-full w-2  group-hover:bg-[#DB2878]  "></div>
        <span class="material-symbols-outlined group-hover:text-[#DB2878]">space_dashboard</span>
        <a class="sb-item group-hover:text-[#DB2878] ">Dashboard</a>
      </div>
      <div onclick="openPage('t_profile')"
        class="w-full h-12 my-2 flex rounded items-center gap-3 hover:bg-[#DB2878]/20 group cursor-pointer overflow-hidden">
        <div class="h-full w-2  group-hover:bg-[#DB2878] "></div>
        <span class="material-symbols-outlined group-hover:text-[#DB2878]">person</span>
        <a class="sb-item group-hover:text-[#DB2878]">Profile</a>
      </div>
      <div
        class="w-full h-12 my-2 flex rounded items-center gap-3 bg-[#DB2878]/20 group cursor-pointer overflow-hidden">
        <div class="h-full w-2  bg-[#DB2878] "></div>
        <span class="material-symbols-outlined text-[#DB2878]">visibility</span>
        <a class="sb-item text-[#DB2878]">View Attendance</a>
      </div>
      <div onclick="openPage('/t_mark_attendance')"
        class="w-full h-12 my-2 flex rounded items-center gap-3 hover:bg-[#DB2878]/20 group cursor-pointer overflow-hidden">
        <div class="h-full w-2  group-hover:bg-[#DB2878] "></div>
        <span class="material-symbols-outlined group-hover:text-[#DB2878]">check_box</span>
        <a class="sb-item group-hover:text-[#DB2878]">Mark Attendance</a>
      </div>
      <div onclick="openPage('/t_assignment')"
        class="w-full h-12 my-2 flex rounded items-center gap-3 hover:bg-[#DB2878]/20 group cursor-pointer overflow-hidden">
        <div class="h-full w-2  group-hover:bg-[#DB2878] "></div>
        <span class="material-symbols-outlined group-hover:text-[#DB2878]">assignment</span>
        <a class="sb-item group-hover:text-[#DB2878]">Assignments</a>
      </div>
      <div onclick="openPage('/t_logout')"
        class="w-full h-12 my-2 flex rounded items-center gap-3 hover:bg-[#DB2878]/20 group cursor-pointer overflow-hidden">
        <div class="h-full w-2  group-hover:bg-[#DB2878] "></div>
        <span class="material-symbols-outlined group-hover:text-[#DB2878]">logout</span>
        <a class="sb-item group-hover:text-[#DB2878]">Log Out</a>
      </div>
      <div onclick="openPage('/t_help')"
        class="w-full h-12 my-2 flex rounded items-center gap-3 hover:bg-[#DB2878]/20 group cursor-pointer overflow-hidden">
        <div class="h-full w-2  group-hover:bg-[#DB2878] "></div>
        <span class="material-symbols-outlined group-hover:text-[#DB2878]">help</span>
        <a class="sb-item group-hover:text-[#DB2878]">Help</a>
      </div>
    </div>
  </div>

  <!-- Main Section -->

  <div class="main-sec ml-0 sm:ml-60 mt-16 p-8 h-[calc(100vh-4rem)] overflow-auto bg-gray-200/70 text-[#515151]
    " style="background-image: url('/images/light-pink5.jpg');">
    <h1 class="text-2xl font-bold mb-4">View Attendance</h1>

    <!-- Parent container with space between -->
    <div id="mydiv" class="w-full flex justify-between items-start mt-8 px-4">

      <!-- Left Column -->
      <div class="w-[48%]">
        <label for="enr-search" class="mb-1 block">View Attendance using Student Enrollment Number:</label>
        <div class="flex items-center gap-4">
          <input type="text" id="enr-search" placeholder="Search student"
            class="flex-1 h-8 px-3 border border-gray-200 rounded-sm bg-white w-full" />
          <button id="search_button"
            class="h-8 px-4 bg-[#DB2878] hover:bg-[#DB2878]/90 text-white font-medium rounded-lg">
            Search
          </button>
        </div>
        <div id="error_msg2" class="text-red-500 text-sm mt-2 hidden">
          Invalid Student Enrollment Number!
        </div>
      </div>

      <!-- Right Column -->
      <div class="w-[48%]" style="margin-right: 140px;">
        <label for="select-lect" class="mb-1 block">View Attendance for Sections:</label>

        <!-- Flex row containing the select and button -->
        <div class="flex gap-4">
          <select name="lecture" id="select-lect" class="bg-white border-1 rounded-sm border-gray-200 mt-1 h-8 w-full">
            <option value="" disabled selected hidden>Select Lecture</option>
          </select>
          <div
            class="view-att-btn h-8 w-44 bg-[#DB2878] hover:bg-[#DB2878]/90 rounded-lg cursor-pointer text-white font-medium flex justify-center items-center gap-1">
            View
          </div>
        </div>

        <div class="error-msg text-red-500 text-sm hidden mt-2">
          Please select a lecture first!
        </div>
      </div>

    </div>

    <div class="content-to-be-loaded hidden">
      <div id="attendance-table" class="mt-16 w-11/12 bg-white m-auto overflow-x-auto">
        <table class="w-full md:text-sm text-xs ">
          <thead>
            <tr class="bg-[#DB2878]/50">
              <th class="px-4 py-2 text-white">Serial no.</th>
              <th class="px-4 py-2 text-white">Student ID</th>
              <th class="px-4 py-2 text-white">Student Name</th>
              <th class="px-4 py-2 text-white">Lectures Taken</th>
              <th class="px-4 py-2 text-white">Total Lectures</th>
              <th class="px-4 py-2 text-white">Percentage</th>
            </tr>
          </thead>

          <!-- table body -->
          <tbody>

          </tbody>
        </table>
      </div>
    </div>


    <div id="search_stu_div" class="hidden" style="width: 90%; ; padding: 16px; margin-top: 32px;">

      <!-- Info Headings Row -->
      <div id="firstdiv" class="w-11/12 m-auto"
        style="display: flex; justify-content: center; gap: 10%; padding: 2px; background: linear-gradient(to right, black, #DB2878); border-radius: 4px;">

        <h4 id="studentNameLabel"
          style="color: white; font-size: 16px; font-weight: 600; padding: 5px 12px; box-shadow: 1px 1px 5px rgba(255, 255, 255, 0.2);">
          FirstName LastName </h4>
        <h4 id="sectionLabel"
          style="color: white; font-size: 16px; font-weight: 600; padding: 5px 12px; box-shadow: 1px 1px 5px rgba(29, 18, 18, 0.2);">
          Section: Third Year T1 </h4>
        <h4 id="subjectLabel"
          style="color: white; font-size: 16px; font-weight: 600; padding: 5px 12px; box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);">
          Subject: Operating Systems </h4>

      </div>

      <!-- main stuff dynamically loaded -->

      <div id="second_div" class="mt-4 w-11/12 bg-white m-auto rounded shadow">

        <!-- Choice Div -->
        <div id="choice" class="bg-[#DB2878]/50 text-white text-sm font-semibold flex">

          <!-- Monthly Option -->
          <div id="Monthly"
            style="display: flex; align-items: center; justify-content: center; font-size: 1rem; height: 30px; width: 50%;">
            Monthly
          </div>

          <!-- Weekly Option -->
          <div id="Weekly"
            style=" display: flex; align-items: center; justify-content: center; font-size: 1rem; height: 30px; width: 50%;">
            Weekly
          </div>

        </div>

        <!-- Data Div -->
        <div id="data" class="" style="display: flex; align-items: center; justify-content: center;">
          <div id="monthlydata" class="hidden"
            style="width: 50%; margin-top: 1rem; padding-left: 1rem; padding-right: 1rem; padding-top: 0.5rem; padding-bottom: 0.5rem; font-size: 0.7rem; color: #1f2937;">
            <div id="calendar-controls" style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
              <button id="prevMonth"
                style="width: 15%;background-color: #DB2878;color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem;">
                Prev</button>
              <h2 id="monthLabel" style="font-weight: 700; font-size: 1rem;">Month Year</h2>
              <button id="nextMonth"
                style="width: 15%;background-color: #DB2878;color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem;">Next</button>
            </div>
            <div id="calendar-grid"
              style="display: grid; grid-template-columns: repeat(7, minmax(0, 1fr)); gap: 0.25rem;"></div>

            <div>
              <!-- Legend Div -->
              <div style="display: flex; gap: 1rem; margin-top: 1rem; font-size: 0.875rem;">
                <div style="display: flex; align-items: center; gap: 0.25rem;">
                  <div style="width: 1rem; height: 1rem; background-color: #c0ffe8; border-radius: 0.25rem;"></div>
                  <span style="color: #065f46;">Student Present</span>
                </div>
                <div style="display: flex; align-items: center; gap: 0.25rem;">
                  <div style="width: 1rem; height: 1rem; background-color: #ffc9c9; border-radius: 0.25rem;"></div>
                  <span style="color: #7f1d1d;">Student Absent</span>
                </div>
                <div style="display: flex; align-items: center; gap: 0.25rem;">
                  <div style="width: 1rem; height: 1rem; background-color: #f3f4f6; border-radius: 0.25rem;"></div>
                  <span style="color: #4b5563;">No Lecture Taken</span>
                </div>
              </div>

            </div>

          </div>



          <!-- Data Div -->
          <div id="weeklydata" class="hidden"
            style="width: 50%; margin-top: 1rem; padding-left: 1rem; padding-right: 1rem; padding-top: 0.5rem; padding-bottom: 0.5rem; font-size: 0.7rem; color: #1f2937;">

            <!-- Weekly Controls -->
            <div id="calendar-controls2" style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
              <button id="prevWeek"
                style="width: 15%; background-color: #DB2878; color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem;">
                Prev</button>
              <h2 id="weekLabel" style="font-weight: 700; font-size: 1rem;">Week Label</h2>
              <button id="nextWeek"
                style="width: 15%; background-color: #DB2878; color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem;">Next</button>
            </div>

            <!-- Weekly Calendar Grid -->
            <div id="calendar-grid2"
              style="display: grid; grid-template-columns: repeat(7, minmax(0, 1fr)); gap: 0.25rem;">
              <!-- Days of the week will be dynamically added here -->
            </div>
            <div>
              <!-- Legend Div -->
              <div style="display: flex; gap: 1rem; margin-top: 1rem; font-size: 0.875rem;">
                <div style="display: flex; align-items: center; gap: 0.25rem;">
                  <div style="width: 1rem; height: 1rem; background-color: #c0ffe8; border-radius: 0.25rem;"></div>
                  <span style="color: #065f46;">Student Present</span>
                </div>
                <div style="display: flex; align-items: center; gap: 0.25rem;">
                  <div style="width: 1rem; height: 1rem; background-color: #f3f4f6; border-radius: 0.25rem;"></div>
                  <span style="color: #4b5563;">No Lecture Taken</span>
                </div>
                <div style="display: flex; align-items: center; gap: 0.25rem;">
                  <div style="width: 1rem; height: 1rem; background-color: #ffc9c9; border-radius: 0.25rem;"></div>
                  <span style="color: #7f1d1d;">Student Absent</span>
                </div>
              </div>

            </div>

          </div>
        </div>
      </div>



    </div>




</body>

<style>
  #Monthly:hover {
    background-color: #DB2878;
    color: white;
    cursor: pointer;
    transform: scale(1.05);
    transition: all 0.2s ease-in-out;
  }

  #Weekly:hover {
    background-color: #DB2878;
    color: white;
    cursor: pointer;
    transform: scale(1.05);
    transition: all 0.2s ease-in-out;
  }

  .active {
    background-color: #DB2878;
    color: white;
  }
</style>

</html>